{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "lib",
    "target": "es5",
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true
  },
    "include": ["./src/**/*", "./test/**/*"],
  "exclude":[
    "node_modules"
  ]
}
